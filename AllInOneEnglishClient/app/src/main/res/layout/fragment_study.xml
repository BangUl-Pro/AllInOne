<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_study_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/study_recycler_height"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/fragment_study_qna"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_qna"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fragment_study_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_question"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fragment_study_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_customer"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fragment_study_after"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_after"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>