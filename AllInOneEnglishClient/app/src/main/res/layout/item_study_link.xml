<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="@dimen/study_link_recycler_height">

    <Button
        android:id="@+id/fragment_study_link_qna"
        android:layout_width="@dimen/study_link_recycler_height"
        android:layout_height="match_parent"
        android:background="@drawable/ic_qna"
        android:layout_marginRight="@dimen/margin_small"/>

    <Button
        android:id="@+id/fragment_study_link_question"
        android:layout_width="@dimen/study_link_recycler_height"
        android:layout_height="match_parent"
        android:background="@drawable/ic_question"
        android:layout_marginRight="@dimen/margin_small"/>

    <Button
        android:id="@+id/fragment_study_link_after"
        android:layout_width="@dimen/study_link_recycler_height"
        android:layout_height="match_parent"
        android:background="@drawable/ic_after"
        android:layout_marginRight="@dimen/margin_small"/>
    
</LinearLayout>